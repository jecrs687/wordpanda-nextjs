{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@infra/*": [
        "./src/backend/infra/*"
      ],
      "@infra": [
        "./src/backend/infra"
      ],
      "@mocks/*": [
        "./src/mocks/*"
      ],
      "@mocks": [
        "./src/mocks"
      ],
      "@assets/*": [
        "./public/assets/*"
      ],
      "@assets": [
        "./public/assets"
      ],
      "@backend/*": [
        "./src/backend/*"
      ],
      "@backend": [
        "./src/backend"
      ],
      "@hooks/*": [
        "./src/containers/hooks/*"
      ],
      "@hooks": [
        "./src/containers/hooks"
      ],
      "@core/*": [
        "./src/containers/core/*"
      ],
      "@core": [
        "./src/containers/core"
      ],
      "@services/*": [
        "./src/containers/services/*"
      ],
      "@services": [
        "./src/containers/services"
      ],
      "@common/*": [
        "./src/containers/common/*"
      ],
      "@common": [
        "./src/containers/common"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@view/*": [
        "./src/containers/view/*"
      ],
      "@view": [
        "./src/containers/view"
      ],
      "@constants/*": [
        "./src/containers/constants/*"
      ],
      "@constants": [
        "./src/containers/constants"
      ],
      "@domain/*": [
        "./src/backend/domain/*"
      ],
      "@domain": [
        "./src/backend/domain"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@styles": [
        "./src/styles"
      ],
      "@actions/*": [
        "./src/backend/domain/actions/*"
      ],
      "@actions": [
        "./src/backend/domain/actions"
      ],
    },
    "strict": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}